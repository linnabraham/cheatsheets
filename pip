# to see details about a package including dependencies in some cases
pip show <packagename>


# python virtualenv inherit specific packages from your global site-packages
--system-site-packages

# to install things in virtualenv rather than system python
pip install --ignore-installed or pip install -I

# install specific branch or commit hash or tag from git
pip install git+https://github.com/<username>/<repo>.git@<branch>
pip install git+https://github.com/<username>/<repo>.git@<commit-hash>
pip install git+https://github.com/<username>/<repo>.git@v1.2.3

