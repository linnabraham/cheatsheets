# retain past two days
journalctl --vacuum-time=2d

# retain past 500 MB
journalctl --vaccum-size=500M

# follow logs of bluetooth alone
journalctl --unit=bluetooth -f

# show system messages from current boot
journalctl -b-0

# To display all errors since last boot:
journalctl -b -p err

# display only kernel messages
journalctl -k

# follow log for individual application
journalctl -u mpd -f
journalctl --user -u mpd -f

# see list of boots
journalctl --list-boots

# show from user session not system-wide logs
journalctl --user

# see logs for a user service
journalctl --user -u task-calsync.service -b -f

# reverse chronological order
-r

# jump to the end
-e

# avoid pager
--no-pager
