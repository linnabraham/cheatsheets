# installation
conda install jupyterlab -c conda-forge

# convert notebook to script
jupyter-nbconvert analyze-catalogue.ipynb --to script

# To  instal kernel in jupyter notebook
python -m ipykernel install --user --name other-env --display-name "Python (other-env)"

jupyter --paths
jupyter kernelspec list
jupyter kernelspec uninstall unwanted-kernel
ipython kernel install --user --name=<name>

# dont open browser
--no-browser

# refresh the page if showing a blank page
Ctrl + shift + r

# specify ip to run on
--ip=local-ip

# display video in cell
from IPython.display import Video
Video("/path/to/file.mp4", embed=True)

# launch without browser
jupyter-lab --no-browser

# reload code without restarting kernel in notebook
import importlib
import path.to.package as pkg
importlib.reload(pkg)
from path.to.package import *
