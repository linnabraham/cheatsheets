# see order in which addresses are resolved
cat /etc/nsswitch.conf | grep hosts
## output
hosts: mymachines resolve [!UNAVAIL=return] files myhostname dns
## after changing this
hosts: files mymachines myhostname dns resolve 

# see how a particular dns resolver would resolve an address
nslookup readwise.io 1.1.1.1
