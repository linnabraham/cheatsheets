# compile into a pdf
$pdf_mode = 1;

# prevent fallback to pdflatex
$pdflatex = 'xelatex';  

#Clean up (remove) all regeneratable files generated by latex and bibtex or biber. 
# This is the same as the -c option with the addition of dvi, postscript and pdf files, and those specified in the $clean_full_ext configuration variable. 
latexmk -C main.tex

# define outdir in latexmkrc
$out_dir = 'build';

# Use biber instead of bibtex
$bibtex_use = 2;
$biber = 'biber %O %B';

# Dont use bibtex
$bibtex_use = 0;

