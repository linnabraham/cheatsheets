# check which font is in use
LANG=ml_IN fc-match

# see list of fonts installed
fc-list

# after install a font using pacman
fc-cache

# check the default font
fc-match

# check the default monospace font
fc-match Monospace

# much smaller list of fonts installed
fc-list : family | sort -u

# see which fonts advertise support for a language
fc-list :lang=ml
